<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddDrActivity"
    android:background="@drawable/gradient"
    >

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:fontFamily="@font/avenirnextmedium"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#bababa"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/top_10_round"
        android:backgroundTint="#ffccb9b9"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@drawable/top_10_round"
        android:backgroundTint="#f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191">

        <EditText
            android:id="@+id/f_ed1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:fontFamily="@font/avenirnextmedium"
            android:hint="Provider First Name"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColorHint="#BABABA"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="237dp"
            android:layout_height="49dp"
            android:fontFamily="@font/avenir_next"
            android:gravity="center"
            android:text="Add New Provider"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155" />

        <EditText
            android:id="@+id/l_ed1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:fontFamily="@font/avenirnextmedium"
            android:hint="Provider Last Name"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColorHint="#BABABA"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.802" />

        <TextView
            android:id="@+id/spc_txt"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:drawableEnd="@drawable/ic_drop"
            android:drawableRight="@drawable/ic_drop"
            android:fontFamily="@font/avenirnextmedium"
            android:gravity="clip_vertical|center_horizontal|left|center_vertical"
            android:hint="Select Speciality"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHint="#BABABA"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cred_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_ed1" />

        <TextView
            android:id="@+id/cred_txt"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:drawableEnd="@drawable/ic_drop"
            android:drawableRight="@drawable/ic_drop"
            android:fontFamily="@font/avenirnextmedium"
            android:gravity="center"
            android:hint="Credentials"
            android:paddingLeft="12dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textColorHint="#BABABA"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spc_txt"
            app:layout_constraintTop_toBottomOf="@+id/l_ed1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        app:itemTextColor="@drawable/selector"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu"  />

</androidx.constraintlayout.widget.ConstraintLayout>